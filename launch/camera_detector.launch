<launch>
  <!-- Node launching -->
  <node pkg="mercator_sensor_fusion_ros_pkg" type="camera_detector" name="camera_detector" output="screen">
    <!-- Parameters -->
    <param name="blob_file_path" value="$(find mercator_sensor_fusion_ros_pkg)\src\mercator_sensor_fusion_ros_pkg\models\rvr_256_rota.blob" />
    <param name="json_file_path" value="$(find mercator_sensor_fusion_ros_pkg)\src\mercator_sensor_fusion_ros_pkg\models\rvr_256_rota.json" />
    <param name="visualize" value="false" />
    <param name="publish_frames" value="false" />

    <!-- Topic remappings -->
    <!-- <remap from="oak" to="/output_oak" />
    <remap from="oak_frames" to="/output_oak_frames" />
    <remap from="cam_poses" to="/output_cam_poses" /> -->
  </node>

      <!-- Launch the RotateLaserScanNode with a specific rotation angle -->
  <node pkg="mercator_sensor_fusion_ros_pkg" type="rotate_laser_scan" name="rotate_laser_scan" output="screen">
        <!-- Set the parameter for rotation angle in radians -->
        <param name="rotation_angle_in_radians" value="3.14159"/>

        <remap from="/rotated_scan" to="/corrected_scan"/>
    </node>

  <!-- Argument definitions -->
  <!-- <arg name="blob_file_path" default="$(find your_package_name)/path/to/blob_file.blob" />
  <arg name="json_file_path" default="$(find your_package_name)/path/to/config.json" />
  <arg name="visualize" default="false" /> -->
</launch>
